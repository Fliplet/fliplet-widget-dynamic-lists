<div class="rTableRow clearfix {{#if editable}}editable{{else}}no-editable{{/if}}" data-id="{{id}}">
  {{#if editable}}
  <div class="reorder-handle">
    <i class="fa fa-ellipsis-v"></i><i class="fa fa-ellipsis-v"></i>
  </div>
  {{else}}
  <div class="reorder-handle-placeholder">
    <i class="fa fa-ellipsis-v"></i><i class="fa fa-ellipsis-v"></i>
  </div>
  {{/if}}
  <div class="original-row clearfix">
    <div class="rTableCell title">
      {{#if helper}}{{helper}}{{else}}Data field{{/if}}
    </div>
    <div class="rTableCell select field">
      <select name="detail_select_field" id="detail_select_field_{{id}}" class="form-control">
        <option value="none">-- Select a data field</option>
        <option disabled>------</option>
        <option value="custom">Custom</option>
        <option disabled>------</option>
        {{#each columns}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
    </div>
    <div class="rTableCell select type">
      <select name="detail_field_type" id="detail_select_type_{{id}}" class="form-control" {{#unless editable}}disabled{{/unless}}>
        <option value="image">Image</option>
        <option value="text" selected>Plain text</option>
        <option value="html">HTML</option>
        <option value="url">URL</option>
        <option value="tel">Telephone</option>
        <option value="mail">Email</option>
        <option value="date">Date (e.g. {{date}})</option>
      </select>
    </div>
    <div class="rTableCell select type">
      <select name="select_field_label" id="detail_select_label_{{id}}" class="form-control" {{#unless editable}}disabled{{/unless}}>
        <option value="column-name">Column name as label</option>
        <option value="custom-label">Custom label</option>
        <option value="no-label">No label</option>
      </select>
    </div>
    {{#if editable}}
    <div class="rTableCell title delete">
      <i class="fa fa-trash-o"></i>
    </div>
    {{/if}}
  </div>
  <div class="custom-field-input clearfix hidden">
    <div class="rTableCell title text-right">
      <small>Custom field</small>
    </div>
    <div class="rTableCell select field">
      <input type="text" class="form-control" id="detail_custom_field_{{id}}">
    </div>
    <div class="rTableCell select field">
      <p class="text-muted field-text-info">Use <code>\{{[*]}}</code> to wrap around a field name, e.g. <code>\{{[city]}}, \{{[country]}}</code>.</p>
    </div>
  </div>
  <div class="image-type-select clearfix hidden">
    <div class="rTableCell title flex-right"><small>Data type</small></div>
    <div class="rTableCell select field">
      <select class="form-control" id="detail_image_field_type_{{id}}" name="image_type_select" data-current-id={{id}}>
        <option value="all-folders">Image folder</option>
        <option value="url" selected>URL to external image</option>
      </select>
    </div>
    <div class="rTableCell select field picker-provider-button hidden" data-field-id="{{id}}">
      <div class="btn btn-default file-picker-btn" data-file-picker-details>Select a folder</div>
      <div class="selected-folder hidden">Selected folder: <span></span></div>
      <div class="text-danger error-message hidden" data-submission-error><span>Please select a folder to continue</span></div>
    </div>
    <div class="rTableCell select field">
      <p class="text-muted field-text-info folders-only">In the list data use the file name only (e.g. <code>image</code> or <code>image.jpg</code>)</p>
      <p class="text-muted field-text-info url-only hidden">In the list data use a URL (e.g. <code>http://fliplet.com/image.jpg</code>)</p>
    </div>
  </div>
  <div class="custom-label-input clearfix hidden">
    <div class="rTableCell title text-right">
      <small>Custom label</small>
    </div>
    <div class="rTableCell select field">
      <input type="text" class="form-control" id="detail_custom_field_name_{{id}}">
    </div>
  </div>
</div>
