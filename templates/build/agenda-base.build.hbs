<div class="new-agenda-list-container loading\{{#if hasTopBar}} has-top-bar\{{/if}}\{{#if showAddEntry}} has-add-entry\{{/if}}">
  <!-- Filter Overlay -->
  \{{#if filtersInOverlay}}
  <div class="new-agenda-search-filter-overlay">
    <div class="agenda-overlay-screen"></div>
    <div class="agenda-overlay-wrapper">
      <div class="agenda-overlay-header">
        <div class="agenda-overlay-close focus-outline" tabindex="0">
          <i class="fa fa-angle-left"></i>
        </div>
        <div class="filter-header-holder">
          <div class="filter-header-btn-controls">
            <div class="btn clear-filters hidden focus-outline" tabindex="0">{{ T "widgets.dynamicLists.dataSource.filter.clear" }}</div>
            <div class="btn apply-filters focus-outline" tabindex="0">{{ T "widgets.dynamicLists.dataSource.filter.apply" }}</div>
          </div>
        </div>
      </div>
      <div class="agenda-overlay-content">
        <div class="hidden-filter-controls">
          <div class="hidden-filter-controls-content">
            <div class="filters-header">{{ T "widgets.dynamicLists.dataSource.filter.filterBy" }}</div>
            <div class="filter-holder">
              <!-- Filters here -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  \{{/if}}
  <!-- End of Filter Overlay -->

  <!-- Top bar with profile and search icons -->
  <div class="section-top-wrapper">
    \{{#if searchEnabled}}
    <div class="search-holder">
      <i class="fa fa-search"></i>
      <input type="search" name="search-feed" class="form-control search-feed focus-outline" tabindex="0" placeholder="{{T "widgets.dynamicLists.dataSource.search.placeholder"}}" required >
      <div class="btn btn-default search-btn">{{T "widgets.dynamicLists.dataSource.search.action"}}</div>
      <div class="btn btn-default search-btn searching-btn"><i class="fa fa-spinner fa-pulse fa-fw"></i></div>
    </div>
    \{{/if}}
    \{{#ifCond filtersEnabled '||' bookmarksEnabled}}
    <div class="list-search-icon">
      \{{#ifCond bookmarksEnabled '&&' hasTopBar}}
      <div class="toggle-bookmarks focus-outline" tabindex="0" data-mixitup-control="\{{id}}" data-toggle=".bookmarked" >
        <span class="fa fa-bookmark-o"></span>
        <span class="fa fa-bookmark"></span>
      </div>
      \{{/ifCond}}
      <div class="list-search-cancel focus-outline" tabindex="0" ><span class="fa fa-times"></span></div>
      \{{#if filtersEnabled}}
      <i class="fa fa-sliders focus-outline" tabindex="0"></i>
      \{{/if}}
    </div>
    \{{/ifCond}}
  </div>
  <!-- End of Top bar -->

  \{{#if bookmarksEnabled}}
    \{{#unless hasTopBar}}
    <div class="agenda-list-controls focus-outline" tabindex="1">
      <div class="toggle-agenda" data-mixitup-control="\{{id}}" data-toggle=".bookmarked">
        <span class="fa fa-bookmark-o"></span>
        <span class="fa fa-bookmark"></span>
        <div class="agenda-list-label">{{T "widgets.dynamicLists.dataSource.agenda.list.listLabel"}}</div>
      </div>
    </div>
    \{{/unless}}
  \{{/if}}

  <!-- Days slider -->
  <div class="agenda-date-selector">
    <ul>
      <!-- Day filter will be added here -->
    </ul>
  </div>

  <!-- Agenda Cards -->
  <div class="agenda-cards-wrapper" id="agenda-cards-wrapper-\{{id}}">
    <div class="agenda-list-holder" role="list">
      <!-- Cards will be rendered here -->
    </div>
    <!-- States messages -->
    <div class="agenda-state-messages">
      <div class="loading-holder">
        <i class="fa fa-circle-o-notch fa-spin"></i>{{ T "widgets.dynamicLists.dataSource.loading" }}
      </div>
    </div>
  </div>

  <!-- Search results -->
  <div class="search-results-wrapper">
    <!-- Inline Search and Filters -->
    <div class="hidden-controls">
      \{{#if searchEnabled}}
      <div class="hidden-search-controls">
        <div class="hidden-search-controls-content">
          <div class="hidden-filter-controls-search">
            <div class="search-query-holder">
              <div class="search-query">
                {{T "widgets.dynamicLists.dataSource.search.searchQuery"}}
              </div>
            </div>
          </div>
        </div>
      </div>
      \{{/if}}
      <div class="active-filters hidden">
        <div class="hidden-filter-controls-label">{{T "widgets.dynamicLists.dataSource.filter.label"}}</div>
        <div class="hidden-filter-controls-filter-container hidden" touch-action="pan-x pan-y">
          <div class="hidden-filter-controls-filter-wrapper">
            <fieldset data-filter-active-group>
            </fieldset>
          </div>
        </div>
      </div>
      \{{#if filtersEnabled}}
      <div class="hidden-filter-controls">
        <div class="hidden-filter-controls-content">
          \{{#unless filtersInOverlay}}
            \{{#if filtersEnabled}}
            <div class="filter-holder inline-filter-holder">
              <!-- Filters here -->
            </div>
            \{{/if}}
          \{{/unless}}
        </div>
      </div>
      \{{/if}}
    </div>
    <!-- End of Inline Search and Filters -->
    <div class="search-results-holder"></div>
  </div>
</div>

<!-- Detail view overlay -->
<div class="agenda-detail-overlay" id="agenda-detail-overlay-\{{id}}">
  <div class="agenda-detail-overlay-wrapper">
    <div class="agenda-detail-overlay-panel">
      <div class="agenda-detail-overlay-close focus-outline \{{#if previousScreen}}go-previous-screen\{{/if}}" tabindex="0">
        <img src="\{{closeIcon.black.url}}" alt="close icon" class="close-icon">
      </div>
      <div class="agenda-detail-overlay-content">
        <div class="agenda-detail-overlay-content-holder">
          <!-- Details will be added here -->
        </div>
      </div>
    </div>
    <div class="agenda-detail-overlay-close tablet \{{#if previousScreen}}go-previous-screen\{{/if}}" >
      <img src="\{{closeIcon.black.url}}" alt="close icon" class="close-icon">
    </div>
  </div>
  <div class="agenda-detail-overlay-screen \{{#if previousScreen}}go-previous-screen\{{/if}}"></div>
</div>

\{{#if showAddEntry}}
<div class="dynamic-list-add-item focus-outline" tabindex="1">
  <i class="fa fa-plus"></i>
</div>
\{{/if}}
