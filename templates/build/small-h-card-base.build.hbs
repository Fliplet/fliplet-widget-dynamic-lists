<div class="new-small-h-card-list-container">
  <div class="small-h-card-list-wrapper" id="small-h-card-list-wrapper-\{{id}}" role="list">
      <!-- List items will appear here -->
  </div>
  <div class="loading-data">
    <i class="fa fa-circle-o-notch fa-spin"></i> {{ T "widgets.dynamicLists.dataSource.loading" }}
  </div>
</div>

<!-- Detail view overlay -->
<div class="small-h-card-detail-overlay" id="small-h-card-detail-overlay-\{{id}}">
  <div class="small-h-card-detail-overlay-wrapper">
    <div class="small-h-card-detail-overlay-panel">
      <div class="small-h-card-detail-overlay-close \{{#if previousScreen}}go-previous-screen\{{/if}} focus-outline" tabindex="0">
        <img src="\{{closeIcon.black.url}}" alt="close icon" class="close-icon">
      </div>
      <div class="small-h-card-detail-overlay-content">
        <div class="small-h-card-detail-overlay-content-holder">
          <!-- Details will be added here -->
        </div>
      </div>
    </div>
    <div class="small-h-card-detail-overlay-close tablet \{{#if previousScreen}}go-previous-screen\{{/if}} focus-outline" tabindex="0">
      <img src="\{{closeIcon.black.url}}" alt="close icon" class="close-icon">
    </div>
  </div>
  <div class="small-h-card-detail-overlay-screen \{{#if previousScreen}}go-previous-screen\{{/if}}"></div>
</div>

\{{#if showAddEntry}}
<div class="dynamic-list-add-item focus-outline" tabindex="1">
  <i class="fa fa-plus"></i>
</div>
\{{/if}}