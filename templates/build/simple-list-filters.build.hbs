\{{#if filtersInOverlay}}
  <div class="panel-group">
    \{{#each filters}}
      <div class="panel panel-default simple-list-filters-panel">
        <div class="panel-heading" data-toggle="collapse" data-target="#collapse-\{{id}}-\{{@index}}">
          <h4 class="panel-title">
            <span class="panel-title-text">
              \{{[name]}}
            </span>
            <span class="fa fa-angle-down"></span>
          </h4>
        </div>
        <div id="collapse-\{{id}}-\{{@index}}" class="panel-collapse collapse">
          <div class="panel-body">
            <fieldset hidden data-filter-group>
              \{{#each [data]}}
              <div class="btn hidden-filter-controls-filter focus-outline" data-toggle="\{{[class]}}" data-field="\{{../name}}" data-value="\{{[name]}}" tabindex="0">\{{[name]}}</div>
              \{{/each}}
            </fieldset>
          </div>
        </div>
      </div>
    \{{/each}}
  </div>
\{{else}}
  \{{#each filters}}
    \{{#if data.length}}
    <div class="hidden-filter-controls-label">Filter by <span>\{{[name]}}</span></div>
    <div class="hidden-filter-controls-filter-container" touch-action="pan-x pan-y">
      <div class="hidden-filter-controls-filter-wrapper">
        <fieldset hidden data-filter-group>
          \{{#each [data]}}
          <div class="btn hidden-filter-controls-filter focus-outline" data-toggle="\{{[class]}}" data-field="\{{../name}}" data-value="\{{[name]}}" tabindex="0">\{{[name]}}</div>
          \{{/each}}
        </fieldset>
      </div>
    </div>
    \{{/if}}
  \{{/each}}
\{{/if}}