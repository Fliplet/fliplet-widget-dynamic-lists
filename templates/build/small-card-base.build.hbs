<div class="new-small-card-list-container loading">
  <!-- Filter Overlay -->
  \{{#if filtersInOverlay}}
  <div class="small-card-search-filter-overlay">
    <div class="small-card-overlay-screen"></div>
    <div class="small-card-overlay-wrapper">
      <div class="small-card-overlay-header">
        <div class="news-feed-overlay-close">
          <i class="fa fa-angle-left"></i>
        </div>
        <div class="filter-header-holder">
          <span>Filter</span>
          <div class="filter-header-btn-controls">
            <div class="btn clear-filters hidden">Clear</div>
            <div class="btn apply-filters">Apply</div>
          </div>
        </div>
      </div>
      <div class="small-card-overlay-content">
        <div class="hidden-filter-controls">
          <div class="hidden-filter-controls-content">
            <div class="filters-header">Filter by</div>
            <div class="filter-holder">
              <!-- Filters here -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  \{{/if}}
  <!-- End of Filter Overlay -->

  <!-- Developer back button -->
  <div class="back-button-holder \{{#unless goBackButton}}hidden\{{/unless}}">
    <div class="btn small-card-back-button" data-lfd-back>Go back</div>
  </div>

  <!-- Top bar with profile and search icons -->
  <div class="section-top-wrapper profile-disabled">
    <div class="my-profile-container">
      <div class="my-profile-icon"></div>
      <div class="my-profile-placeholder"></div>
      <div class="my-profile-text">My profile</div>
    </div>

    \{{#if searchEnabled}}
    <div class="search-holder">
      <i class="fa fa-search"></i>
      <input type="search" name="search-feed" class="form-control search-feed" placeholder="Search...">
      <div class="btn btn-default search-btn">Search</div>
      <div class="btn btn-default search-btn searching-btn"><i class="fa fa-spinner fa-pulse fa-fw"></i></div>
    </div>
    \{{/if}}
    <div class="list-search-icon">
      \{{#ifCond filtersInOverlay '!==' true}}
      <div class="list-search-cancel"><span class="fa fa-times"></span></div>
      \{{/ifCond}}
      \{{#if filtersEnabled}}
      <i class="fa fa-sliders"></i>
      \{{/if}}
    </div>
  </div>
  <!-- End of Top bar -->

  <!-- Inline Search and Filters -->
  \{{#ifCond filtersInOverlay '!==' true}}
    \{{#ifCond searchEnabled '||' filtersEnabled}}
    <div class="hidden-filter-controls">
      <div class="hidden-filter-controls-content">
        \{{#if searchEnabled}}
        <div class="hidden-filter-controls-search">
          <div class="search-query-holder">
            <div class="search-query">
            Searching for: <span class="current-query-wrapper"><span class="current-query"></span><span class="clear-search"><i class="fa fa-times"></i></span></span>
            </div>
          </div>
        </div>
        \{{/if}}
        \{{#if filtersEnabled}}
        <div class="filter-holder inline-filter-holder">
          <!-- Filters here -->
        </div>
        \{{/if}}
      </div>
    </div>
    \{{/ifCond}}
  \{{/ifCond}}
  <!-- End of Inline Search and Filters -->

  <div class="small-card-list-wrapper" id="small-card-list-wrapper-\{{id}}">
      <!-- List items will appear here -->
  </div>

  \{{#if enabledLimitEntries}}
  <div class="limit-entries-text">
    \{{#ifCond limitEntries '==' 0}}
      \{{#ifCond searchEnabled '||' filtersEnabled}}
      <p>\{{#if searchEnabled}}Search\{{/if}}\{{#ifCond searchEnabled '&&' filtersEnabled}} and/or \{{/ifCond}}\{{#if filtersEnabled}}Filter\{{/if}} to see the list items</p>
      \{{/ifCond}}
    \{{/ifCond}}
    \{{#ifCond limitEntries '>' 0}}
    <p>Showing the first \{{limitEntries}} list items. \{{#if searchEnabled}}Search\{{/if}}\{{#ifCond searchEnabled '&&' filtersEnabled}} and/or \{{/ifCond}}\{{#if filtersEnabled}}Filter\{{/if}} to see more.</p>
    \{{/ifCond}}
  </div>
  \{{/if}}

  <div class="loading-data">
    <i class="fa fa-circle-o-notch fa-spin"></i> Loading...
  </div>
  <div class="no-results-holder">
    No matches found
  </div>
</div>

<!-- Detail view overlay -->
<div class="small-card-detail-overlay" id="small-card-detail-overlay-\{{id}}">
  <div class="small-card-detail-overlay-screen"></div>
  <div class="small-card-detail-overlay-wrapper">
    <div class="small-card-detail-overlay-panel">
      <div class="small-card-detail-overlay-close \{{#if previousScreen}}go-previous-screen\{{/if}}">
        <i class="fa fa-times"></i>
      </div>
      <div class="small-card-detail-overlay-content">
        <div class="small-card-detail-overlay-content-holder">
          <!-- Details will be added here -->
        </div>
      </div>
    </div>
    <div class="small-card-detail-overlay-close tablet \{{#if previousScreen}}go-previous-screen\{{/if}}">
      <i class="fa fa-times"></i>
    </div>
  </div>
</div>

\{{#if showAddEntry}}
<div class="dynamic-list-add-item">
  <i class="fa fa-plus"></i>
</div>
\{{/if}}