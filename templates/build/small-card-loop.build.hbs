\{{#each this}}
  <div class="small-card-list-item mix \{{[flClasses]}} \{{#if isCurrentUser}}is-current-user\{{/if}}" data-entry-id="\{{id}}" role="listitem" >
    <div class="small-card-list-image \{{#unless [Image]}}no-image\{{/unless}}">
      <div class="small-card-list-detail-wrapper" data-entry-id="\{{id}}">
        \{{#if [Image]}}
        <div class="small-card-list-detail-image-wrapper">
          <div class="small-card-list-detail-image" style="background-image: url('\{{auth [Image]}}')"></div>
          \{{#unless [Image]}}<i class="fa fa-user"></i>\{{/unless}}
        </div>
        \{{/if}}
      </div>
    </div>
    <div class="small-card-list-text-wrapper \{{#if bookmarksEnabled}} has-bookmarks \{{/if}}">
      <div class="small-card-list-name">\{{[First Name]}} \{{[Last Name]}}</div>
      <div class="small-card-list-role">\{{[Title]}}</div>
      <div class="small-card-list-location">\{{[Location]}}</div>
      \{{#if bookmarksEnabled}}
      <div class="small-card-bookmark-holder small-card-bookmark-holder-\{{id}}">
        <!-- Bookmark button will be here -->
        <!-- Bookmark placeholder -->
        <i class="fa fa-bookmark-o fa-lg bookmark-placeholder"></i>
      </div>
      \{{/if}}
    </div>
  </div>
  \{{/each}}
