\{{#ifCond type '===' 'date'}}
  <fieldset data-filter-group data-type="\{{type}}" data-field="\{{name}}">
    <div class="filter-range-block">
      <div class="form-group fl-date-picker hidden-filter-controls-filter filter-date-from focus-outline" data-type="\{{type}}" data-field="\{{name}}" data-default="\{{min}}">
        <i class="fa fa-calendar fa-fw"></i>
        <input type="date" class="form-control" value="\{{min}}">
        <input type="text" class="form-control">
        <i class="fa fa-times fa-fw"></i>
      </div>
      <span class="filter-range-to">{{T "widgets.list.dynamic.filter.filterRange.to"}}</span>
    </div>
    <div class="filter-range-block">
      <div class="form-group fl-date-picker hidden-filter-controls-filter filter-date-to focus-outline" data-type="\{{type}}" data-field="\{{name}}" data-default="\{{max}}">
        <i class="fa fa-calendar fa-fw"></i>
        <input type="date" class="form-control" value="\{{max}}">
        <input type="text" class="form-control">
        <i class="fa fa-times fa-fw"></i>
      </div>
      <span class="btn btn-link filter-range-reset" data-field="\{{name}}" tabindex="0">{{T "widgets.list.dynamic.filter.filterRange.action"}}</span>
    </div>
  </fieldset>
\{{/ifCond}}
\{{#ifCond type '===' 'number'}}
  <fieldset data-filter-group data-type="\{{type}}" data-field="\{{name}}">
    <div class="filter-range-block">
      <div class="form-group fl-number-input hidden-filter-controls-filter filter-number-from focus-outline" data-type="\{{type}}" data-field="\{{name}}" data-default="\{{min}}">
        <input type="number" class="form-control" value="\{{min}}">
      </div>
      <span class="filter-range-to">{{T "widgets.list.dynamic.filter.filterRange.to"}}</span>
    </div>
    <div class="filter-range-block">
      <div class="form-group fl-number-input hidden-filter-controls-filter filter-number-to focus-outline" data-type="\{{type}}" data-field="\{{name}}" data-default="\{{max}}">
        <input type="number" class="form-control" value="\{{max}}">
      </div>
      <span class="btn btn-link filter-range-reset" data-field="\{{name}}" tabindex="0">{{T "widgets.list.dynamic.filter.filterRange.action"}}</span>
    </div>
  </fieldset>
\{{/ifCond}}
\{{#ifCond type '===' 'toggle'}}
  <fieldset data-filter-group data-type="\{{type}}" data-field="\{{name}}">
    \{{#each [data]}}
    <div class="btn hidden-filter-controls-filter focus-outline" tabindex="0" data-type="\{{../type}}" data-toggle="\{{[class]}}" data-field="\{{../name}}" data-value="\{{[name]}}" >\{{[name]}}</div>
    \{{/each}}
  </fieldset>
\{{/ifCond}}
\{{#unless type}}
  <fieldset data-filter-group data-type="toggle" data-field="\{{name}}">
    \{{#each [data]}}
    <div class="btn hidden-filter-controls-filter focus-outline" tabindex="0" data-type="toggle" data-toggle="\{{[class]}}" data-field="\{{../name}}" data-value="\{{[name]}}" >\{{[name]}}</div>
    \{{/each}}
  </fieldset>
\{{/unless}}
