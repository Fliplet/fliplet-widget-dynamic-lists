\{{#if [Image]}}
<div class="small-h-card-list-detail-image-wrapper">
  <div
    class="small-h-card-list-detail-image"
    style="background-image: url('\{{auth [Image]}}')"
  ></div>
  \{{#unless [Image]}}<i class="fa fa-user"></i>\{{/unless}}
</div>
\{{/if}}
<div class="small-h-card-list-detail-content-scroll-wrapper" data-entry-id="\{{id}}">
  <div class="small-h-card-list-detail-content-wrapper">
    <div class="small-h-card-list-detail-name">\{{[First Name]}} \{{[Last Name]}}</div>
    <div class="small-h-card-list-detail-role">\{{[Title]}}</div>
    <div class="small-h-card-list-detail-location">\{{[Location]}}</div>
    <div class="small-h-card-list-detail-buttons-wrapper">
      \{{#if [Email]}}
      <div class="small-h-card-list-detail-button">
        <a href="mailto:\{{[Email]}}" target="_blank" class="focus-outline">
          <div class="small-h-card-list-detail-button-image"><span
              class="fa fa-envelope-o"
            ></span></div>
          <div class="small-h-card-list-detail-button-text">\{{T
            "widgets.list.dynamic.smallCard.email" }}</div>
        </a>
      </div>
      \{{/if}}
      \{{#if [Telephone]}}
      <div class="small-h-card-list-detail-button">
        <a href="tel:\{{[Telephone]}}" target="_blank" class="focus-outline">
          <div class="small-h-card-list-detail-button-image"><span class="fa fa-phone"></span></div>
          <div class="small-h-card-list-detail-button-text">\{{T
            "widgets.list.dynamic.smallCard.call" }}</div>
        </a>
      </div>
      \{{/if}}
      \{{#if [Linkedin]}}
      <div class="small-h-card-list-detail-button">
        <a href="\{{ensureProtocol [Linkedin]}}" target="_blank" class="focus-outline">
          <div class="small-h-card-list-detail-button-image"><span
              class="fa fa-linkedin"
            ></span></div>
          <div class="small-h-card-list-detail-button-text">\{{T
            "widgets.list.dynamic.smallCard.linkedin" }}</div>
        </a>
      </div>
      \{{/if}}
    </div>

    <div class="small-h-card-details-holder">
      \{{#each entryDetails}}
      <!-- Image template -->
      \{{#ifCond type '==' 'image'}}
      \{{#if content}}
      <div data-detail-entry-id="\{{id}}">
        \{{#if labelEnabled}}
        <div class="small-h-card-list-detail-label">\{{label}}</div>
        \{{/if}}
        \{{#if (isSingle contentArray)}}
        <div class="small-h-card-list-detail-body-text single-image-holder">
          <img src="\{{validateImage content}}" />
        </div>
        \{{else}}
        <div class="multiple-images-holder">
          \{{#each contentArray}}
          <div class="multiple-images-item">
            <div class="image" style="background-image: url('\{{validateImage this}}')"></div>
          </div>
          \{{/each}}
        </div>
        \{{/if}}
      </div>
      \{{/if}}
      \{{/ifCond}}

      <!-- Plain text template -->
      \{{#ifCond type '==' 'text'}}
      \{{#if content}}
      \{{#if labelEnabled}}
      <div class="small-h-card-list-detail-label">\{{label}}</div>
      \{{/if}}

      <div class="small-h-card-list-detail-body-text">\{{content}}</div>
      \{{/if}}
      \{{/ifCond}}

      <!-- HTML template -->
      \{{#ifCond type '==' 'html'}}
      \{{#if content}}
      \{{#if labelEnabled}}
      <div class="small-h-card-list-detail-label">\{{label}}</div>
      \{{/if}}

      <div class="small-h-card-list-detail-body-text">\{{{auth content}}}</div>
      \{{/if}}
      \{{/ifCond}}

      <!-- URL template -->
      \{{#ifCond type '==' 'url'}}
      \{{#if content}}
      \{{#if labelEnabled}}
      <div class="small-h-card-list-detail-label">\{{label}}</div>
      \{{/if}}

      <div class="small-h-card-list-detail-body-text">
        <a href="\{{{auth (ensureProtocol content)}}}" target="_blank">\{{ T "widgets.list.dynamic.detail.linkText"
          }}</a>
      </div>
      \{{/if}}
      \{{/ifCond}}

      <!-- Telephone template -->
      \{{#ifCond type '==' 'tel'}}
      \{{#if content}}
      \{{#if labelEnabled}}
      <div class="small-h-card-list-detail-label">\{{label}}</div>
      \{{/if}}

      <div class="small-h-card-list-detail-body-text">
        <a href="tel:\{{removeSpaces content}}" target="_blank">\{{content}}</a>
      </div>
      \{{/if}}
      \{{/ifCond}}

      <!-- Email template -->
      \{{#ifCond type '==' 'mail'}}
      \{{#if content}}
      \{{#if labelEnabled}}
      <div class="small-h-card-list-detail-label">\{{label}}</div>
      \{{/if}}

      <div class="small-h-card-list-detail-body-text">
        <a href="mailto:\{{content}}" target="_blank">\{{content}}</a>
      </div>
      \{{/if}}
      \{{/ifCond}}

      <!-- Number template -->
      \{{#ifCond type '==' 'number'}}
      \{{#if content includeZero=true}}
      \{{#if labelEnabled}}
      <div class="small-h-card-list-detail-label">\{{label}}</div>
      \{{/if}}

      <div class="small-h-card-list-detail-body-text">\{{TN content forceNumber=false}}</div>
      \{{/if}}
      \{{/ifCond}}

      <!-- Date template -->
      \{{#ifCond type '==' 'date'}}
      \{{#if content}}
      \{{#if labelEnabled}}
      <div class="small-h-card-list-detail-label">\{{label}}</div>
      \{{/if}}

      <div class="small-h-card-list-detail-body-text">\{{formatDate content}}</div>
      \{{/if}}
      \{{/ifCond}}

      <!-- File template -->
      \{{#ifCond type '==' 'file'}}
      \{{#if content}}
      <ul class="file-holder">
        \{{#if labelEnabled}}
        <div class="small-h-card-list-detail-label">\{{label}}</div>
        \{{/if}}
        \{{#each content}}
        <li class="file-item">
          <div class="file-title">\{{this.name}}</div>
          <div class="file-info">
            <span class="file-info-uploaded">\{{ T "widgets.list.dynamic.detail.uploaded" }}:
              \{{formatDate this.uploaded}}</span>
            \{{#if this.size}}<span class="file-info-size">&ndash;
              \{{humanFileSize this.size}}</span>\{{/if}}
          </div>
          <input type="hidden" value="\{{this.url}}" />
          <div class="file-icon">
            <i class="fa fa-angle-right"></i>
          </div>
        </li>
        \{{/each}}
      </ul>
      \{{/if}}
      \{{/ifCond}}

      \{{/each}}
    </div>

    <!-- Edit or Delete buttons -->
    \{{#ifCond editEntry '||' deleteEntry}}
    <div class="dynamic-list-controls">
      \{{#if editEntry}}
      <div class="btn btn-default dynamic-list-edit-item focus-outline" tabindex="0">\{{T
        "widgets.list.dynamic.detail.edit" }}</div>
      \{{/if}}
      \{{#if deleteEntry}}
      <div class="btn btn-danger dynamic-list-delete-item focus-outline" tabindex="0">\{{T
        "widgets.list.dynamic.detail.delete" }}</div>
      \{{/if}}
    </div>
    \{{/ifCond}}
  </div>
</div>
