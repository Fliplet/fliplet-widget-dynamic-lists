<div class="small-h-card-list-detail-close-btn"><i class="fa fa-times"></i></div>
<div class="small-h-card-list-detail-content-scroll-wrapper">
  <div class="small-h-card-list-detail-content-wrapper">
    <div class="small-h-card-list-detail-name">\{{[First Name]}} \{{[Last Name]}}</div>
    <div class="small-h-card-list-detail-role">\{{[Title]}}</div>
    <div class="small-h-card-list-detail-location">\{{[Location]}}</div>
    \{{#unless isCurrentUser}}
    <div class="small-h-card-list-detail-buttons-wrapper">
      \{{#if [Email]}}
      <div class="small-h-card-list-detail-button">
        <a href="mailto:\{{[Email]}}" target="_blank">
          <div class="small-h-card-list-detail-button-image"><span class="fa fa-envelope-o"></span></div>
          <div class="small-h-card-list-detail-button-text">EMAIL</div>
        </a>
      </div>
      \{{/if}}
      \{{#if [Telephone]}}
      <div class="small-h-card-list-detail-button">
        <a href="tel:\{{[Telephone]}}" target="_blank">
          <div class="small-h-card-list-detail-button-image"><span class="fa fa-phone"></span></div>
          <div class="small-h-card-list-detail-button-text">CALL</div>
        </a>
      </div>
      \{{/if}}
      \{{#if [Linkedin]}}
      <div class="small-h-card-list-detail-button">
        <a href="\{{[Linkedin]}}" target="_blank">
          <div class="small-h-card-list-detail-button-image"><span class="fa fa-linkedin"></span></div>
          <div class="small-h-card-list-detail-button-text">LINKEDIN</div>
        </a>
      </div>
      \{{/if}}
    </div>
    \{{/unless}}

    <div class="small-h-card-details-holder">
      \{{#each entryDetails}}
        <!-- Image template -->
        \{{#ifCond type '==' 'image'}}
          \{{#if labelEnabled}}
          <div class="small-h-card-list-detail-label">\{{label}}</div>
          \{{/if}}

          <div class="small-h-card-list-detail-body-text">
            <img src="\{{validateImage content}}">
          </div>
        \{{/ifCond}}

        <!-- Plain text template -->
        \{{#ifCond type '==' 'text'}}
          \{{#if labelEnabled}}
          <div class="small-h-card-list-detail-label">\{{label}}</div>
          \{{/if}}

          <div class="small-h-card-list-detail-body-text">\{{content}}</div>
        \{{/ifCond}}

        <!-- HTML template -->
        \{{#ifCond type '==' 'html'}}
          \{{#if labelEnabled}}
          <div class="small-h-card-list-detail-label">\{{label}}</div>
          \{{/if}}

          <div class="small-h-card-list-detail-body-text">\{{{content}}}</div>
        \{{/ifCond}}

        <!-- URL template -->
        \{{#ifCond type '==' 'url'}}
          \{{#if labelEnabled}}
          <div class="small-h-card-list-detail-label">\{{label}}</div>
          \{{/if}}

          <div class="small-h-card-list-detail-body-text">
            <a href="\{{content}}" target="_blank">Tap to open</a>
          </div>
        \{{/ifCond}}

        <!-- Date template -->
        \{{#ifCond type '==' 'date'}}
          \{{#if labelEnabled}}
          <div class="small-h-card-list-detail-label">\{{label}}</div>
          \{{/if}}

          <div class="small-h-card-list-detail-body-text">"\{{formatDate content}}</div>
        \{{/ifCond}}
      \{{/each}}
    </div>

    <!-- Edit or Delete buttons -->
    \{{#ifCond editEntry '||' deleteEntry}}
    <div class="dynamic-list-controls">
      \{{#if editEntry}}
      <div class="btn btn-default dynamic-list-edit-item">Edit</div>
      \{{/if}}
      \{{#if deleteEntry}}
      <div class="btn btn-danger dynamic-list-delete-item">Delete</div>
      \{{/if}}
    </div>
    \{{/ifCond}}
  </div>
</div>