\{{#if filtersInOverlay}}
  <div class="panel-group filter-overlay">
    \{{#each filters}}
      <div class="panel panel-default news-feed-filters-panel focus-outline" tabindex="0">
        <div class="panel-heading" data-toggle="collapse" data-target="#collapse-\{{id}}-\{{@index}}">
          <h4 class="panel-title">
            <span class="panel-title-text">
              \{{[name]}}
            </span>
            <span class="active-filter-count"></span>
            <span class="fa fa-angle-down"></span>
          </h4>
        </div>
        <div id="collapse-\{{id}}-\{{@index}}" class="panel-collapse collapse">
          <div class="panel-body">
            <fieldset data-filter-group>
              \{{#each data}}
                <div class="btn hidden-filter-controls-filter focus-outline" tabindex="0" data-toggle="\{{class}}" data-field="\{{../name}}" data-value="\{{name}}" >\{{name}}</div>
              \{{/each}}
            </fieldset>
          </div>
        </div>
      </div>
    \{{/each}}
  </div>
\{{else}}
  \{{#each filters}}
  <div class="hidden-filter-controls-label">Filter by <span>\{{[name]}}</span></div>
  <div class="hidden-filter-controls-filter-container hidden" touch-action="pan-x pan-y">
    <div class="hidden-filter-controls-filter-wrapper">
      <fieldset data-filter-group>
        \{{#each data}}
          \{{#ifCond type '==' 'Date'}}
            \{{#if @first}}
              <div class="date-picker-container">
                <input
                  type="text"
                  id="dateFrom"
                  value="\{{minDate}}"
                  class="date-picker btn overlay-filter hidden-filter-controls-filter-date-range focus-outline"
                  data-toggle="dateFrom"
                  data-field="\{{../../name}}"
                  data-value="">
                <i class="fa fa-calendar">&nbsp;</i>
                to
              </div>
              <div class="date-picker-container">
                <input
                  type="text"
                  id="dateTo"
                  value="\{{maxDate}}"
                  class="date-picker btn overlay-filter hidden-filter-controls-filter-date-range focus-outline"
                  data-toggle="dateTo"
                  data-field="\{{../../name}}"
                  data-value="">
                <i class="fa fa-calendar">&nbsp;</i>
                <input type="button" value="Reset" id="resetDate" class="btn btn-link btn-link-reset hidden" data-track="RESET_DATES">
              </div>
            \{{/if}}
          \{{else}}
            <div class="btn hidden-filter-controls-filter focus-outline overlay-filter" tabindex="0" data-toggle="\{{class}}" data-field="\{{../name}}" data-value="\{{name}}" >\{{name}}</div>
          \{{/ifCond}}
        \{{/each}}
      </fieldset>
    </div>
  </div>
  \{{/each}}
\{{/if}}