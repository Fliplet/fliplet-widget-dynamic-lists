<div class="simple-list-container loading">
  <!-- Filter Overlay -->
  \{{#if filtersInOverlay}}
  <div class="simple-list-search-filter-overlay">
    <div class="simple-list-overlay-screen"></div>
    <div class="simple-list-overlay-wrapper">
      <div class="simple-list-overlay-header">
        <div class="simple-list-overlay-close focus-outline" tabindex="0">
          <i class="fa fa-angle-left"></i>
        </div>
        <div class="filter-header-holder">
          <div class="filter-header-btn-controls">
            <div class="btn clear-filters hidden focus-outline" tabindex="0">Clear</div>
            <div class="btn apply-filters focus-outline" tabindex="0">Apply</div>
          </div>
        </div>
      </div>
      <div class="simple-list-overlay-content">
        <div class="hidden-filter-controls">
          <div class="hidden-filter-controls-content">
            <div class="filters-header">Filter by</div>
            <div class="filter-holder">
              <!-- Filters here -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  \{{/if}}
  <!-- End of Filter Overlay -->

  <!-- Developer back button -->
  <div class="back-button-holder \{{#unless goBackButton}}hidden\{{/unless}}">
    <div class="btn simple-list-back-button" data-lfd-back>Go back</div>
  </div>

  <!-- Top bar with profile and search icons -->
  <div class="section-top-wrapper">
    \{{#if searchEnabled}}
    <div class="search-holder">
      <i class="fa fa-search"></i>
      <input type="search" name="search-feed" class="form-control search-feed focus-outline" tabindex="0" placeholder="Search..." required >
      <div class="btn btn-default search-btn">Search</div>
      <div class="btn btn-default search-btn searching-btn"><i class="fa fa-spinner fa-pulse fa-fw"></i></div>
    </div>
    \{{/if}}
    \{{#if searchIconsEnabled}}
    <div class="list-search-icon">
      \{{#if bookmarksEnabled}}
      <div class="toggle-bookmarks focus-outline" tabindex="0" data-mixitup-control="\{{id}}" data-toggle=".bookmarked" >
        <span class="fa fa-bookmark-o"></span>
        <span class="fa fa-bookmark"></span>
      </div>
      \{{/if}}
      <div class="list-search-cancel focus-outline" tabindex="0"><span class="fa fa-times"></span></div>
      \{{#if filtersEnabled}}
      <i class="fa fa-sliders focus-outline" tabindex="0" ></i>
      \{{/if}}
      \{{#if sortEnabled}}
      <div class="sort-group btn-group">
        <i class="fa fa-sort-amount-desc focus-outline" tabindex="0" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" aria-hidden="true"></i>
        <ul class="dropdown-menu list-sort">
          \{{#each sortFields}}
            <li data-sort-order="none" data-sort-field="\{{ this }}"><span>\{{ this }} \{{#if this}}<i class="fa fa-sort focus-outline" tabindex="0" aria-hidden="true"></i><i class="fa fa-sort-asc focus-outline" tabindex="0" aria-hidden="true"></i><i class="fa fa-sort-desc focus-outline" tabindex="0" aria-hidden="true"></i>\{{/if}}</span></li>
          \{{/each}}
        </ul>
      </div>
      \{{/if}}
    </div>
    \{{/if}}
  </div>
  <!-- End of Top bar -->

  <!-- Inline Search and Filters -->
  \{{#if searchEnabled}}
  <div class="hidden-search-controls">
    <div class="hidden-search-controls-content">
      <div class="hidden-filter-controls-search">
        <div class="search-query-holder">
          <div class="search-query">
          Searching for <span class="current-query-wrapper"><span class="current-query"></span><span class="clear-search"><i class="fa fa-times"></i></span></span>
          </div>
        </div>
      </div>
    </div>
  </div>
  \{{/if}}
  <div class="active-filters hidden">
    <div class="hidden-filter-controls-label">Filters applied</div>
    <div class="hidden-filter-controls-filter-container hidden" touch-action="pan-x pan-y">
      <div class="hidden-filter-controls-filter-wrapper">
        <fieldset data-filter-active-group>
        </fieldset>
      </div>
    </div>
  </div>
  \{{#if filtersEnabled}}
  <div class="hidden-filter-controls">
    <div class="hidden-filter-controls-content">
      \{{#unless filtersInOverlay}}
        \{{#if filtersEnabled}}
        <div class="filter-holder inline-filter-holder">
          <!-- Filters here -->
        </div>
        \{{/if}}
      \{{/unless}}
    </div>
  </div>
  \{{/if}}
  <!-- End of Inline Search and Filters -->

  <div class="simple-list-wrapper" id="simple-list-wrapper-\{{id}}" role="list">
    <!-- List items will appear here -->
  </div>

  \{{#if enabledLimitEntries}}
  <div class="limit-entries-text">
    \{{#ifCond limitEntries '==' 0}}
      \{{#ifCond searchEnabled '||' filtersEnabled}}
      <p>\{{#if searchEnabled}}Search\{{/if}}\{{#ifCond searchEnabled '&&' filtersEnabled}} and/or \{{/ifCond}}\{{#if filtersEnabled}}Filter\{{/if}} to see the list items</p>
      \{{/ifCond}}
    \{{/ifCond}}
    \{{#ifCond limitEntries '>' 0}}
    <p>Showing the first \{{limitEntries}} list items.\{{#ifCond searchEnabled '||' filtersEnabled}} \{{#if searchEnabled}}Search\{{/if}}\{{#ifCond searchEnabled '&&' filtersEnabled}} and/or \{{/ifCond}}\{{#if filtersEnabled}}Filter\{{/if}} to see more.\{{/ifCond}}</p>
    \{{/ifCond}}
  </div>
  \{{/if}}

  <div class="loading-holder">
    <i class="fa fa-circle-o-notch fa-spin"></i> Loading...
  </div>
  <div class="no-results-holder">
    No matches found
  </div>
  <div class="no-bookmarks-holder">
    Nothing bookmarked
  </div>
</div>

<!-- Detail view overlay -->
<div class="simple-list-detail-overlay" id="simple-list-detail-overlay-\{{id}}" data-entry-id="\{{id}}">
  <div class="simple-list-detail-overlay-wrapper">
    <div class="simple-list-detail-overlay-panel">
      <div class="simple-list-detail-overlay-heading">
        <div class="simple-list-detail-overlay-close \{{#if previousScreen}}go-previous-screen\{{/if}} focus-outline" tabindex="0" >
          <img src="\{{closeIcon.black.url}}" alt="close icon" class="close-icon">
        </div>
      </div>
      <div class="simple-list-detail-overlay-content">
        <div class="simple-list-detail-overlay-content-holder">
          <!-- Details will be added here -->
        </div>
      </div>
    </div>
    <div class="simple-list-detail-overlay-close tablet \{{#if previousScreen}}go-previous-screen\{{/if}} focus-outline" tabindex="0" >
      <img src="\{{closeIcon.white.url}}" alt="close icon" class="close-icon">
    </div>
  </div>
  <div class="simple-list-detail-overlay-screen \{{#if previousScreen}}go-previous-screen\{{/if}}"></div>
</div>

\{{#if showAddEntry}}
<div class="dynamic-list-add-item focus-outline" tabindex="1">
  <i class="fa fa-plus"></i>
</div>
\{{/if}}

<div class="simple-list-comment-panel">
  <div class="simple-list-comment-panel-header">
    <div class="simple-list-comment-panel-title">Comments</div>
    <div class="simple-list-comment-close-panel focus-outline" tabindex="0"><i class="fa fa-times"></i></div>
  </div>

  <div class="comments-offline">You are offline</div>

  <div class="simple-list-comment-area">
    <!-- Comments will be added here -->
    <div class="loading-holder">
      <i class="fa fa-circle-o-notch fa-spin"></i> Loading...
    </div>
  </div>

  <div class="simple-list-comment-input-holder">
    <div class="input-first-row">
      <textarea class="form-control" rows="1" placeholder="Type comment" data-comment-body></textarea>
    </div>
    <div class="input-second-row">
      <div class="btn btn-primary comment focus-outline" tabindex="0">Comment</div>
      <div class="btn btn-link cancel">Cancel</div>
      <div class="btn btn-primary save">Save</div>
    </div>
  </div>
</div>
