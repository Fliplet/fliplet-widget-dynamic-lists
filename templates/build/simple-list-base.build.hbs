<div class="simple-list-container loading">
  <!-- Filter Overlay -->
  \{{#if filtersInOverlay}}
  <div class="simple-list-search-filter-overlay">
    <div class="simple-list-overlay-screen"></div>
    <div class="simple-list-overlay-wrapper">
      <div class="simple-list-overlay-header">
        Filter
        <div class="simple-list-overlay-close">
          <i class="fa fa-times"></i>
        </div>
      </div>
      <div class="simple-list-overlay-content">
        <div class="hidden-filter-controls">
          <div class="hidden-filter-controls-content">
            \{{#if searchEnabled}}
            <div class="hidden-filter-controls-search">
              <div class="search-query-holder">
                <div class="search-query">
                Searching for: <span class="current-query-wrapper"><span class="current-query"></span><span class="clear-search"><i class="fa fa-times"></i></span></span>
                </div>
              </div>
            </div>
            \{{/if}}
            <div class="filters-header">Filter by</div>
            <div class="filter-holder">
              <!-- Filters here -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  \{{/if}}
  <!-- End of Filter Overlay -->

  <!-- Top bar with profile and search icons -->
  \{{#ifCond searchEnabled '||' filtersEnabled}}
  <div class="section-top-wrapper">
    \{{#if searchEnabled}}
    <div class="search-holder">
      <i class="fa fa-search"></i>
      <input type="search" name="search-feed" class="form-control search-feed" placeholder="Search...">
      <div class="btn btn-default search-btn">Search</div>
    </div>
    \{{/if}}
    \{{#ifCond filtersEnabled '||' bookmarksEnabled}}
    <div class="list-search-icon">
      \{{#if bookmarksEnabled}}
      <div class="toggle-bookmarks" data-mixitup-control="\{{id}}" data-toggle=".bookmarked">
        <span class="fa fa-bookmark-o"></span>
        <span class="fa fa-bookmark"></span>
      </div>
      \{{/if}}
      \{{#ifCond filtersInOverlay '!==' true}}
      <div class="list-search-cancel"><span class="fa fa-times"></span></div>
      \{{/ifCond}}
      \{{#if filtersEnabled}}
      <i class="fa fa-sliders"></i>
      \{{/if}}
    </div>
    \{{/ifCond}}
  </div>
  \{{/ifCond}}
  <!-- End of Top bar -->

  <!-- Inline Search and Filters -->
  \{{#ifCond filtersInOverlay '!==' true}}
    \{{#ifCond searchEnabled '||' filtersEnabled}}
    <div class="hidden-filter-controls">
      <div class="hidden-filter-controls-content">
        \{{#if searchEnabled}}
        <div class="hidden-filter-controls-search">
          <div class="search-query-holder">
            <div class="search-query">
            Searching for: <span class="current-query-wrapper"><span class="current-query"></span><span class="clear-search"><i class="fa fa-times"></i></span></span>
            </div>
          </div>
        </div>
        \{{/if}}
        \{{#if filtersEnabled}}
        <div class="filter-holder">
          <!-- Filters here -->
        </div>
        \{{/if}}
      </div>
    </div>
    \{{/ifCond}}
  \{{/ifCond}}
  <!-- End of Inline Search and Filters -->

  <div class="simple-list-wrapper" id="simple-list-wrapper-\{{id}}">
    <!-- List items will appear here -->
  </div>

  \{{#if enabledLimitEntries}}
  <div class="limit-entries-text">
    \{{#ifCond limitEntries '==' 0}}
    <p>Search or filter to see the list items</p>
    \{{/ifCond}}
    \{{#ifCond limitEntries '>' 0}}
    <p>Showing the first \{{limitEntries}} list items. \{{#if searchEnabled}}Search\{{/if}}\{{#ifCond searchEnabled '&&' filtersEnabled}} and/or \{{/ifCond}}\{{#if filtersEnabled}}Filter\{{/if}} too see more.</p>
    \{{/ifCond}}
  </div>
  \{{/if}}
  
  <div class="loading-holder">
    <i class="fa fa-circle-o-notch fa-spin"></i> Loading...
  </div>
</div>

<!-- Detail view overlay -->
<div class="simple-list-detail-overlay" id="simple-list-detail-overlay-\{{id}}" data-entry-id="\{{id}}">
  <div class="simple-list-detail-overlay-screen"></div>
  <div class="simple-list-detail-overlay-wrapper">
    <div class="simple-list-detail-overlay-panel">
      <div class="simple-list-detail-overlay-heading">
        <div class="simple-list-detail-overlay-close \{{#if previousScreen}}go-previous-screen\{{/if}}">
          <i class="fa fa-times"></i>
        </div>
      </div>
      <div class="simple-list-detail-overlay-content">
        <div class="simple-list-detail-overlay-content-holder">
          <!-- Details will be added here -->
        </div>
      </div>
    </div>
    <div class="simple-list-detail-overlay-close tablet \{{#if previousScreen}}go-previous-screen\{{/if}}">
      <i class="fa fa-times"></i>
    </div>
  </div>
</div>

\{{#if showAddEntry}}
<div class="dynamic-list-add-item">
  <i class="fa fa-plus"></i>
</div>
\{{/if}}

<div class="simple-list-comment-panel">
  <div class="simple-list-comment-panel-header">
    <div class="simple-list-comment-panel-title">Comments</div>
    <div class="simple-list-comment-close-panel"><i class="fa fa-times"></i></div>
  </div>

  <div class="comments-offline">You are offline</div>

  <div class="simple-list-comment-area">
    <!-- Comments will be added here -->
    <div class="loading-holder">
      <i class="fa fa-circle-o-notch fa-spin"></i> Loading...
    </div>
  </div>

  <div class="simple-list-comment-input-holder">
    <div class="input-first-row">
      <textarea class="form-control" rows="1" placeholder="Type comment" data-comment-body></textarea>
    </div>
    <div class="input-second-row">
      <div class="btn btn-primary comment">Comment</div>
      <div class="btn btn-link cancel">Cancel</div>
      <div class="btn btn-primary save">Save</div>
    </div>
  </div>
</div>