<div class="simple-list-details-holder" data-entry-id="\{{id}}">
  \{{#each data}}
    <!-- Image template -->
    \{{#ifCond type '==' 'image'}}
      \{{#if content}}
        \{{#if labelEnabled}}
        <div class="simple-list-detail-label">\{{label}}</div>
        \{{/if}}

        <div class="simple-list-detail-value">
          <img src="\{{validateImage content}}">
        </div>
      \{{/if}}
    \{{/ifCond}}

    <!-- Plain text template -->
    \{{#ifCond type '==' 'text'}}
      \{{#if content}}
        \{{#if labelEnabled}}
        <div class="simple-list-detail-label">\{{label}}</div>
        \{{/if}}

        <div class="simple-list-detail-value">\{{content}}</div>
      \{{/if}}
    \{{/ifCond}}

    <!-- HTML template -->
    \{{#ifCond type '==' 'html'}}
      \{{#if content}}
        \{{#if labelEnabled}}
        <div class="simple-list-detail-label">\{{label}}</div>
        \{{/if}}

        <div class="simple-list-detail-value">\{{{auth content}}}</div>
      \{{/if}}
    \{{/ifCond}}

    <!-- URL template -->
    \{{#ifCond type '==' 'url'}}
      \{{#if content}}
        \{{#if labelEnabled}}
        <div class="simple-list-detail-label">\{{label}}</div>
        \{{/if}}

        <div class="simple-list-detail-value">
          <a href="\{{{auth content}}}" target="_blank">Tap to open</a>
        </div>
      \{{/if}}
    \{{/ifCond}}

    <!-- Telephone template -->
    \{{#ifCond type '==' 'tel'}}
      \{{#if content}}
        \{{#if labelEnabled}}
        <div class="simple-list-detail-label">\{{label}}</div>
        \{{/if}}

        <div class="simple-list-detail-value">
          <a href="tel:\{{removeSpaces content}}" target="_blank">\{{content}}</a>
        </div>
      \{{/if}}
    \{{/ifCond}}

    <!-- Email template -->
    \{{#ifCond type '==' 'mail'}}
      \{{#if content}}
        \{{#if labelEnabled}}
        <div class="simple-list-detail-label">\{{label}}</div>
        \{{/if}}

        <div class="simple-list-detail-value">
          <a href="mailto:\{{content}}" target="_blank">\{{content}}</a>
        </div>
      \{{/if}}
    \{{/ifCond}}

    <!-- Date template -->
    \{{#ifCond type '==' 'date'}}
      \{{#if content}}
        \{{#if labelEnabled}}
        <div class="simple-list-detail-label">\{{label}}</div>
        \{{/if}}

        <div class="simple-list-detail-value">\{{formatDate content}}</div>
      \{{/if}}
    \{{/ifCond}}

    <!-- File template -->
    \{{#ifCond type '==' 'file'}}
      \{{#if content}}
        <ul class="file-holder">
          \{{#if labelEnabled}}
            <div class="simple-list-detail-label">\{{label}}</div>
          \{{/if}}
          \{{#each content}}
            <li class="file-item">
              <div class="file-title">\{{this.name}}</div>
              <div class="file-info">
                <span class="file-info-uploaded">Uploaded: \{{formatDate this.uploaded}}</span>
                \{{#if this.size}}<span class="file-info-size">&ndash; \{{humanFileSize this.size}}</span>\{{/if}}
              </div>
              <input type="hidden" value=\{{this.url}}>
              <div class="file-icon">
                <i class="fa fa-angle-right"></i>
              </div>
            </li>
          \{{/each}}
        </ul>
      \{{/if}}
    \{{/ifCond}}

  \{{/each}}

  <!-- Edit and Delete buttons -->
  <div class="simple-list-overlay-inner-holder \{{#ifCond editEntry '||' deleteEntry}}has-edit-controls\{{/ifCond}}">
    \{{#ifCond editEntry '||' deleteEntry}}
    <div class="dynamic-list-controls">
      \{{#if editEntry}}
      <div class="btn btn-default dynamic-list-edit-item focus-outline" tabindex="0">Edit</div>
      \{{/if}}
      \{{#if deleteEntry}}
      <div class="btn btn-danger dynamic-list-delete-item focus-outline" tabindex="0">Delete</div>
      \{{/if}}
    </div>
    \{{/ifCond}}
    <div class="simple-list-overlay-social-holder">
      \{{#if likesEnabled}}
      <div class="simple-list-like-holder simple-list-like-holder-\{{id}}">
        <div class="simple-list-like-wrapper btn-like focus-outline" tabindex="0">
          <span class="count"></span><i class="fa fa-heart-o fa-lg"></i>
        </div>
        <div class="simple-list-like-wrapper btn-liked focus-outline" tabindex="0">
          <span class="count"></span><i class="fa fa-heart fa-lg animated bounceIn"></i>
        </div>
      </div>
      \{{/if}}

      \{{#if bookmarksEnabled}}
      <div class="simple-list-bookmark-holder simple-list-bookmark-holder-\{{id}}">
        <div class="simple-list-bookmark-wrapper btn-bookmark focus-outline" tabindex="0">
          <i class="fa fa-bookmark-o fa-lg"></i>
        </div>
        <div class="simple-list-bookmark-wrapper btn-bookmarked focus-outline" tabindex="0">
          <i class="fa fa-bookmark fa-lg animated fadeIn"></i>
        </div>
      </div>
      \{{/if}}

      \{{#if commentsEnabled}}
      <div class="simple-list-comment-holder simple-list-comemnt-holder-\{{id}} focus-outline" tabindex="0">
        <!-- Like button will be here -->
        <!-- Like placeholder -->
        <i class="fa fa-comment-o fa-lg comment-placeholder"></i>
      </div>
      \{{/if}}
    </div>
  </div>
</div>