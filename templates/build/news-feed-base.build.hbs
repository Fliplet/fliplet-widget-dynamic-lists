<div class="new-news-feed-list-container loading">
  <!-- Filter Overlay -->
  \{{#if filtersInOverlay}}
  <div class="news-feed-search-filter-overlay">
    <div class="news-feed-overlay-screen"></div>
    <div class="news-feed-overlay-wrapper">
      <div class="news-feed-overlay-header">
        <div class="news-feed-overlay-close">
          <i class="fa fa-angle-left"></i>
        </div>
        <div class="filter-header-holder">
          <div class="filter-header-btn-controls">
            <div class="btn clear-filters hidden">Clear</div>
            <div class="btn apply-filters">Apply</div>
          </div>
        </div>
      </div>
      <div class="news-feed-overlay-content">
        <div class="hidden-filter-controls">
          <div class="hidden-filter-controls-content">
            <div class="filters-header">Filter by</div>
            <div class="filter-holder">
              <!-- Filters here -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  \{{/if}}
  <!-- End of Filter Overlay -->

  <!-- Developer back button -->
  <div class="back-button-holder \{{#unless goBackButton}}hidden\{{/unless}}">
    <div class="btn news-feed-back-button" data-lfd-back>Go back</div>
  </div>

  <!-- Top bar with profile and search icons -->
  <div class="section-top-wrapper">
    \{{#if searchEnabled}}
    <div class="search-holder">
      <i class="fa fa-search"></i>
      <input type="search" name="search-feed" class="form-control search-feed" placeholder="Search...">
      <div class="btn btn-default search-btn">Search</div>
      <div class="btn btn-default search-btn searching-btn"><i class="fa fa-spinner fa-pulse fa-fw"></i></div>
    </div>
    \{{/if}}
    \{{#ifCond filtersEnabled '||' bookmarksEnabled}}
    <div class="list-search-icon">
      \{{#if bookmarksEnabled}}
      <div class="toggle-bookmarks" data-mixitup-control="\{{id}}" data-toggle=".bookmarked">
        <span class="fa fa-bookmark-o"></span>
        <span class="fa fa-bookmark"></span>
      </div>
      \{{/if}}
      <div class="list-search-cancel"><span class="fa fa-times"></span></div>
      \{{#if filtersEnabled}}
      <i class="fa fa-sliders"></i>
      \{{/if}}
    </div>
    \{{/ifCond}}
  </div>
  <!-- End of Top bar -->

  <!-- Inline Search and Filters -->
  \{{#if searchEnabled}}
  <div class="hidden-search-controls">
    <div class="hidden-search-controls-content">
      <div class="hidden-filter-controls-search">
        <div class="search-query-holder">
          <div class="search-query">
          Searching for: <span class="current-query-wrapper"><span class="current-query"></span><span class="clear-search"><i class="fa fa-times"></i></span></span>
          </div>
        </div>
      </div>
    </div>
  </div>
  \{{/if}}
  \{{#if filtersEnabled}}
  <div class="hidden-filter-controls">
    <div class="hidden-filter-controls-content">
      \{{#ifCond filtersInOverlay '!==' true}}
      \{{#if filtersEnabled}}
      <div class="filter-holder inline-filter-holder">
        <!-- Filters here -->
      </div>
      \{{/if}}
      \{{/ifCond}}
    </div>
  </div>
  \{{/if}}
  <!-- End of Inline Search and Filters -->

  <div class="news-feed-list-wrapper" id="news-feed-list-wrapper-\{{id}}">
    <!-- List items will appear here -->
  </div>

  \{{#if enabledLimitEntries}}
  <div class="limit-entries-text">
    <p>\{{limitEntriesText}}</p>
  </div>
  \{{/if}}

  <div class="loading-holder">
    <i class="fa fa-circle-o-notch fa-spin"></i> Loading...
  </div>
  <div class="no-results-holder">
    No matches found
  </div>
  <div class="no-bookmarks-holder">
    Nothing bookmarked
  </div>
</div>

<!-- Detail view overlay -->
<div class="news-feed-detail-overlay" id="news-feed-detail-overlay-\{{id}}">
  <div class="news-feed-detail-overlay-screen"></div>
  <div class="news-feed-detail-overlay-wrapper">
    <div class="news-feed-detail-overlay-panel">
      <div class="news-feed-detail-overlay-close \{{#if previousScreen}}go-previous-screen\{{/if}}">
        <i class="fa fa-times"></i>
      </div>
      <div class="news-feed-detail-overlay-content">
        <div class="news-feed-detail-overlay-content-holder">
          <!-- Details will be added here -->
        </div>
      </div>
    </div>
    <div class="news-feed-detail-overlay-close tablet \{{#if previousScreen}}go-previous-screen\{{/if}}">
      <i class="fa fa-times"></i>
    </div>
  </div>
</div>

\{{#if showAddEntry}}
<div class="dynamic-list-add-item">
  <i class="fa fa-plus"></i>
</div>
\{{/if}}

<div class="new-news-feed-comment-panel">
  <div class="news-feed-comment-panel-header">
    <div class="news-feed-comment-panel-title">Comments</div>
    <div class="news-feed-comment-close-panel"><i class="fa fa-times"></i></div>
  </div>

  <div class="comments-offline">You are offline</div>

  <div class="news-feed-comment-area">
    <!-- Comments will be added here -->
    <div class="loading-holder">
      <i class="fa fa-circle-o-notch fa-spin"></i> Loading...
    </div>
  </div>

  <div class="news-feed-comment-input-holder">
    <div class="input-first-row">
      <textarea class="form-control" rows="1" placeholder="Type comment" data-comment-body></textarea>
    </div>
    <div class="input-second-row">
      <div class="btn btn-primary comment">Comment</div>
      <div class="btn btn-link cancel">Cancel</div>
      <div class="btn btn-primary save">Save</div>
    </div>
  </div>
</div>