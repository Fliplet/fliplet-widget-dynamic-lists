<div class="fl-individual-comment pending" data-id="\{{ id }}">
    <div class="loading-comment"><i class="fa fa-circle-o-notch fa-spin"></i></div>
    <div class="top-comment-holder">
      <div class="fl-comment-thumb">
        <div class="fl-comment-image" style="background-image: url('\{{ photo }}')"></div>
        <i class="fa fa-user"></i>
      </div>
      <div class="fl-comment-info-holder">
        <div class="fl-comment-user">\{{ userName }}<span class="separator"><i class="fa fa-circle"></i></span><span>\{{ literalDate }}</span></div>
        <div class="fl-comment-value">\{{ formatComment text }}</div>
      </div>
    </div>
  </div>